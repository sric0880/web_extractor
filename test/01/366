        showname: function (name) {
            if (name[0] != undefined) {
                if (name[0].n != undefined && name[0].n != "") {
                    $('#nn').html(name[0].n + " 你好");
                }
                else {
                    $('#nn').html(name[0].u + " 你好");
                }
            }
        }
    }
    function GetNickname(username) {
        /*获取nickname*/
        $(document).ready(function () {
            var nickname = "";
            $.ajax({
                type: 'get',
                url: 'http://api.csdn.net/service/open/nick?users=' + username + '&callback=$logon.showname',
                async: false,
                dataType: "jsonp",
                jsonp: "jsonpcallback"
            });
        })
    }
