        showname: function (name) {
            if (name[0] != undefined) {
                if (name[0].n != undefined && name[0].n != "") {
                    $('#nn').html(name[0].n + " 你好");
                }
                else {
                    $('#nn').html(name[0].u + " 你好");
                }
            }
        }
